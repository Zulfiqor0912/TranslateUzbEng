<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#070910">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:text="About"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_settings"
        android:padding="26dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bepul oflayn inglizcha lug'at ilovasi inglizcha so'zlarning ma'nosini tushuntiradi! Ta'riflar inglizcha Vikilug'atga asoslangan. Tez qidiruv, qulay va funksional foydalanuvchi interfeysi, planshetlar uchun ham optimallashtirilgan.
Bu ilova boshqa fayllarni yuklamasdan oflayn rejimda ishlaydi!\n\nBu dastur  GITA da tahsil olayotgan Rustamov Zulfiqor tomonidan kursning  28 - darsida uyga vazifa sifatida ishlab chiqarilgan. Xato va kamchiliklar bo'lsa izohlarda o'z fikringizni qoldiring"
            android:textColor="@color/white"
            android:justificationMode="inter_word"
            android:textStyle="italic"
            android:textSize="18sp"
            android:lineSpacingExtra="6dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>